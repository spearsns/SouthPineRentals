        <option>528 S Pine St apt A</option>
        <option>528 S Pine St apt B</option>
        <option>528 S Pine St apt C</option>
        <option disabled>───────────────</option>
        <option>601 W 21st St</option>
        <option>603 W 21st St</option>
        <option disabled>───────────────</option>
        <option>1422 Porter St apt A</option>
        <option>1422 Porter St apt B</option>
        <option disabled>───────────────</option>
        <option>1509 Stockton St</option>
